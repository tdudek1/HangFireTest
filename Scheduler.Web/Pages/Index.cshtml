@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<div class="container">
	<div class="row">
		<div class="col-12">
			<form asp-page-handler="Cron" method="post">
				JobName:<input asp-for="CronName" />
				CronString:<input asp-for="Cron" />
				<button class="btn btn-default">Create Job</button>
			</form>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<form asp-page-handler="Delay" method="post">
				Delay:<input asp-for="Delay" />
				<button class="btn btn-default">Create Job</button>
			</form>
		</div>
	</div>
</div>
